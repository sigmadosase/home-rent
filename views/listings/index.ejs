<% layout("layouts/boilerplates") %> <%= success %>
<body>
     <style>
      #filters-container {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 0.5rem; /* Space between buttons, filters, and tax toggle */
        padding: 0.75rem;
      }
      #filters {
        display: flex;
        flex-wrap: nowrap;
        align-items: center;
        gap: 1.5rem;
        overflow-x: auto;
        scroll-behavior: smooth;
        scrollbar-width: none; /* Hide scrollbar for Firefox */
      }
      #filters::-webkit-scrollbar {
        display: none; /* Hide scrollbar for Chrome/Safari */
      }
      .filter {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin: 0.5rem;
        opacity: 0.7;
        flex: 0 0 auto;
        min-width: 60px;
      }
      .filter:hover {
        opacity: 1;
        cursor: pointer;
      }
      .filter p {
        font-size: 0.8rem;
        margin: 0.4rem 0 0 0;
      }
      .filter i {
        font-size: 1.4rem;
      }
      .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 0.5rem 1rem;
        margin-left: 0.5rem;
        display: flex;
        align-items: center;
        flex: 0 0 auto;
      }
      .form-check-label {
        font-size: 0.9rem;
      }
      .scroll-btn {
        background-color: rgb(63, 187, 212);
        color: white;
        border: none;
        border-radius: 50%;
        width: 2rem;
        height: 2rem;
        font-size: 1rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        flex: 0 0 auto;
      }
      .scroll-btn:hover {
        background-color: #555;
      }
      .scroll-btn:disabled {
        background-color: #ccc;
        cursor: not-allowed;
      }

      /* Tablet screens */
      @media (max-width: 768px) {
        #filters-container {
          gap: 0.4rem;
          padding: 0.5rem;
        }
        #filters {
          gap: 1rem;
        }
        .filter {
          margin: 0.4rem;
          min-width: 50px;
        }
        .filter p {
          font-size: 0.7rem;
        }
        .filter i {
          font-size: 1.2rem;
        }
        .tax-toggle {
          height: 2.5rem;
          padding: 0.4rem 0.8rem;
          margin-left: 0.4rem;
        }
        .form-check-label {
          font-size: 0.8rem;
        }
        .scroll-btn {
          width: 1.8rem;
          height: 1.8rem;
          font-size: 0.9rem;
        }
      }

      /* Mobile screens */
      @media (max-width: 480px) {
        #filters-container {
          gap: 0.3rem;
          padding: 0.3rem;
        }
        #filters {
          gap: 0.75rem;
        }
        .filter {
          margin: 0.3rem;
          min-width: 45px;
        }
        .filter p {
          font-size: 0.65rem;
        }
        .filter i {
          font-size: 1rem;
        }
        .tax-toggle {
          height: 2.2rem;
          padding: 0.3rem 0.6rem;
          margin-left: 0.3rem;
        }
        .form-check-label {
          font-size: 0.7rem;
        }
        .scroll-btn {
          width: 1.5rem;
          height: 1.5rem;
          font-size: 0.8rem;
        }
      }

      .tax-info {
        display: none;
      }
     </style>
    <div id="filters-container">
      <button class="scroll-btn" id="scroll-left" aria-label="Scroll Left"><i class="fa-solid fa-chevron-left"></i></button>
      <div id="filters">
        <div class="filter">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-city"></i></div>
          <p>Iconic City</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-tree-city"></i></div>
          <p>City in Nature</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-landmark"></i></div>
          <p>Castles</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farms</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-snowflake"></i></div>
          <p>Arctic</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-water"></i></div>
          <p>Beach</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-dune"></i></div>
          <p>Desert</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-water-ladder"></i></div>
          <p>Lake</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-wine-bottle"></i></div>
          <p>Vineyard</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-umbrella-beach"></i></div>
          <p>Island</p>
        </div>
        <div class="filter">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Cave</p>
        </div>
      </div>
      <button class="scroll-btn" id="scroll-right" aria-label="Scroll Right"><i class="fa-solid fa-chevron-right"></i></button>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display total after Taxes</label>
        </div>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card col listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b>
                <br>
                â‚¹<%= listing.price.toLocaleString("en-IN") %> / Night
                <b class="tax-info"> +18% GST</b>
              </p>
            </div>
          </div>
        </a>
      <% } %>
    </div>
</body>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const filters = document.getElementById("filters");
    const scrollLeftBtn = document.getElementById("scroll-left");
    const scrollRightBtn = document.getElementById("scroll-right");

    if (!filters || !scrollLeftBtn || !scrollRightBtn) {
      console.error("One or more elements not found: filters, scroll-left, scroll-right");
      return;
    }

    function updateScrollButtons() {
      scrollLeftBtn.disabled = filters.scrollLeft <= 0;
      scrollRightBtn.disabled = filters.scrollLeft >= filters.scrollWidth - filters.clientWidth - 1;
    }

    scrollLeftBtn.addEventListener("click", () => {
      filters.scrollBy({ left: -150, behavior: "smooth" });
      setTimeout(updateScrollButtons, 300);
    });

    scrollRightBtn.addEventListener("click", () => {
      filters.scrollBy({ left: 150, behavior: "smooth" });
      setTimeout(updateScrollButtons, 300);
    });

    window.addEventListener("resize", updateScrollButtons);
    updateScrollButtons();

    const taxSwitch = document.getElementById("switchCheckDefault");
    if (taxSwitch) {
      taxSwitch.addEventListener("click", () => {
        const taxInfo = document.getElementsByClassName("tax-info");
        for (let info of taxInfo) {
          info.style.display = info.style.display !== "inline" ? "inline" : "none";
        }
      });
    } else {
      console.error("Tax switch element not found");
    }
  });
</script>