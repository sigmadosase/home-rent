<% layout("layouts/boilerplates") %>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>
<style>
  /* Inline CSS to make show.ejs responsive like index.ejs */
  body {
    font-family: "Plus Jakarta Sans", sans-serif !important;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  .container {
    flex: 1;
  }
  .listing-card {
    border: none !important;
    margin-bottom: 2rem;
  }
  .show-img {
    width: 100%;
    height: 30vh; /* Restored original height from your show.ejs */
    object-fit: cover;
    border-radius: 1rem !important;
  }
  .card-body {
    padding: 0 !important;
  }
  .card-text {
    font-weight: 400 !important;
  }
  .btns {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
    margin: 15px 0;
  }
  .add-btn {
    background-color: #28a745 !important; /* Green for Edit button */
    border: none !important;
    color: white !important;
  }
  .btn-dark,
  .btn-outline-dark {
    background-color: #fe424d !important; /* Keep Delete and Submit buttons pink-red */
    border: none !important;
    color: white !important;
  }
  .btn-dark.offset-5 {
    margin-left: 0 !important; /* Remove offset for consistency */
  }
  #map {
    width: 100%;
    height: 300px;
    border-radius: 8px;
    margin-top: 10px;
  }
  .review-card {
    border: none !important;
    margin-bottom: 1rem;
  }
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .col-8.offset-3,
    .col-6.offset-3,
    .col-5.ms-3 {
      margin-left: 0 !important;
      width: 100% !important;
      padding: 0 15px;
    }
    .btns .btn {
      flex: 1 1 45%;
    }
    .card.col-5 {
      width: 100% !important;
    }
  }
  @media (max-width: 576px) {
    .col-8.offset-3,
    .col-6.offset-3,
    .col-5.ms-3 {
      margin-left: 0 !important;
      width: 100% !important;
      padding: 0 10px;
    }
    .btns .btn {
      flex: 1 1 100%; /* Full width buttons on small screens */
    }
    #map {
      height: 250px; /* Slightly smaller map on very small screens */
    }
  }
</style>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text"> Owned by: <i><%= listing.Owner.username %></i> </p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <br>
  <% if(currentUser && listing.Owner._id.equals(currentUser._id)) { %>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 add-btn">Edit</a>
    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
  <% } %>
   <div class="col-6 offset-3 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"></div>
  </div>
  <div class="col-8 offset-3 mb-3">
    <% if(currentUser) { %>
    <hr>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">
          Please enter a comment.
        </div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    <hr>
    <% } %>

    <% if(listing.reviews.length > 0) { %>
    <div class="row">
      <p><b>All Reviews</b></p>
      <% for (review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3 review-card">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username %></h5>
          <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
          <p class="card-text"><%= review.comment %></p>
        </div>
        <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
    <% } %>
  </div>
 
</div>

<script src="/js/map.js"></script>